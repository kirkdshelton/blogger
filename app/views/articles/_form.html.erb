<%= form_for(@article) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, class: "form-control" %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, class: "form-control"  %>
  </p>
  <p>
  
  <%= f.submit "Create Magic!", class:"btn btn-success" %>
  </p>
<% end %>
